<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/settings_enhanced_security">
    <SwitchPreference
            android:defaultValue="false"
            android:key="screenlock"
            android:title="@string/settings_screenlock"
            android:summary="@string/settings_screenlock_summary"
            android:icon="@drawable/ic_lock_outline_grey_24dp" />
    <SwitchPreference
            android:defaultValue="false"
            android:key="preventScreenshot"
            android:title="@string/settings_prevent_screenshots"
            android:icon="@drawable/ic_none" />
    <SwitchPreference
            android:defaultValue="false"
            android:key="deleteCredWhenUrlChanged"
            android:title="@string/settings_clear_cred_url_changed"
            android:summary="@string/settings_clear_cred_url_changed_disable"
            android:icon="@drawable/ic_none" />
</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/settings_enhanced_security">
    <SwitchPreference
            android:defaultValue="false"
            android:key="preventScreenshot"
            android:title="@string/settings_prevent_screenshots"
            android:icon="@drawable/ic_fullscreen_grey_24dp" />
    <PreferenceCategory android:title="@string/settings_panic">
        <Preference
                android:key="panicInstall"
                android:persistent="false"
                android:title="@string/settings_panic_install"
                android:icon="@drawable/ic_fullscreen_grey_24dp" />
        <SwitchPreference
                android:defaultValue="false"
                android:key="panicClose"
                android:title="@string/settings_allow_panic_close"
                android:summary="@string/settings_allow_panic_close_summary"
                android:icon="@drawable/ic_fullscreen_grey_24dp" />
        <SwitchPreference
                android:defaultValue="false"
                android:key="panicDeleteCred"
                android:title="@string/settings_allow_panic_delete_cred"
                android:summary="@string/settings_allow_panic_delete_cred_summary"
                android:icon="@drawable/ic_fullscreen_grey_24dp" />
    </PreferenceCategory>
</PreferenceScreen>